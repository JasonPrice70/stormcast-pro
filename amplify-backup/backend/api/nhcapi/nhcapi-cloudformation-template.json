{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "API Gateway for NHC Lambda proxy",
  "Parameters": {
    "AppSyncApiName": {
      "Type": "String"
    },
    "DynamoDBBillingMode": {
      "Type": "String",
      "Default": "PAY_PER_REQUEST"
    },
    "DynamoDBEnableServerSideEncryption": {
      "Type": "String",
      "Default": "false"
    },
    "env": {
      "Type": "String"
    },
    "S3BucketName": {
      "Type": "String"
    },
    "functionnhcProxyName": {
      "Type": "String"
    },
    "functionnhcProxyArn": {
      "Type": "String"
    }
  },
  "Conditions": {
    "ShouldNotCreateEnvResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "NONE"
      ]
    }
  },
  "Resources": {
    "nhcapi": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Description": "API Gateway for NHC data proxy",
        "Name": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "nhcapi",
            {
              "Fn::Sub": [
                "nhcapi-${env}",
                {
                  "env": {
                    "Ref": "env"
                  }
                }
              ]
            }
          ]
        },
        "EndpointConfiguration": {
          "Types": [
            "REGIONAL"
          ]
        },
        "Policy": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": "*",
              "Action": [
                "execute-api:Invoke"
              ],
              "Resource": [
                "execute-api:/*/*/*"
              ]
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "RootUrl": {
      "Description": "Root URL of the API gateway",
      "Value": {
        "Fn::Sub": [
          "https://${restApiId}.execute-api.${region}.amazonaws.com/${env}",
          {
            "restApiId": {
              "Ref": "nhcapi"
            },
            "region": {
              "Ref": "AWS::Region"
            },
            "env": {
              "Ref": "env"
            }
          }
        ]
      }
    },
    "ApiName": {
      "Description": "API Friendly name",
      "Value": "nhcapi"
    },
    "ApiId": {
      "Description": "API ID (prefix of API URL)",
      "Value": {
        "Ref": "nhcapi"
      }
    }
  }
}
